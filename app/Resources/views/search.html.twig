{% extends 'base.html.twig' %}

{% block body %}

<form action="/search" method="get">
    <div class="row">
        <div class="form-group col-md-6">
          <label for="usr">Tweet Text</label>
          <input type="text" class="form-control" id="usr" name="tweettext">
        </div>
        
        <div class="form-group col-md-6">
          <label for="sel1">Select user:</label>
          <select name="screen_name" class="form-control" id="screen_name">
          <option value="0">Choose User</option>
            {% for user in users %}
                <option value="{{ user.ScreenName }}">{{ user.ScreenName }}</option>
            {% endfor %}
          </select>
        </div>
    </div>
    <input type="submit" class="btn btn-info col-md-12" value="Search">
</form>

{% if pagination is not empty %}
<div class="jumbotron" style="margin-top: 15%;">
    <h2>Search Results</h2> 
        {% for tweet in pagination %}
            <div class="panel panel-default">
              <div class="panel-body">{{ tweet.tweet }}</div>
            </div>
        {% endfor %}
</div>
{# display navigation #}
<div class="navigation" align="center">
    {{ knp_pagination_render(pagination) }}
</div>
{% endif %}
    
{% endblock %}